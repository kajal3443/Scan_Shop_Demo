<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mojojojo.loginform.forgot_pass"
    android:background="@drawable/mall6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#938fbfef">

        <EditText
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:hint="Emil_id"
            android:textSize="20dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:id="@+id/emilid"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emilid"
            android:gravity="center"
            android:text="submit"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:textColor="@color/d2"
            android:id="@+id/submit"
            />

    </RelativeLayout>

</RelativeLayout>
