<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mall1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#938fbfef"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:hint="First name"
            android:textColorHint="@color/d1"
            android:id="@+id/firstname"
            android:inputType="text"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            />

    <EditText
        android:textColorHint="@color/d1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:layout_below="@id/firstname"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:background="@drawable/button_shape"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:layout_marginRight="20dp"
        />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:hint="Set your Password"
            android:textColorHint="@color/d1"
            android:layout_below="@id/email"
            android:id="@+id/password"
            android:inputType="numberPassword"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"

            />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="Confirm Password"
        android:textColorHint="@color/d1"
        android:layout_below="@id/password"
        android:id="@+id/chanpassword"
        android:inputType="numberPassword"
        android:background="@drawable/button_shape"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:layout_marginRight="20dp"

        />
    <EditText
            android:textColorHint="@color/d1"
            android:layout_width="match_parent"
            android:layout_below="@id/chanpassword"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"

            android:hint="Phone num"
            android:id="@+id/phonenum"
            android:inputType="phone"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            />
